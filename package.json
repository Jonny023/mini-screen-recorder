{
  "name": "mini-screen-recorder",
  "version": "1.0.0",
  "description": "简洁的屏幕录制工具",
  "main": "src/main/main.js",
  "scripts": {
    "start": "chcp 65001 && electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.mini-screen-recorder.app",
    "productName": "Mini Screen Recorder",
    "win": {
      "target": "portable"
    },
    "directories": {
      "output": "build"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "asar": true
  },
  "devDependencies": {
    "electron": "12.2.3",
    "electron-builder": "22.11.5"
  },
  "author": "",
  "license": "MIT"
}
